<article class="ac-blog">
  <header class="ac-index-section ac-masthead ac-masthead-blog">
    <div class="container">
      <div class="row flex-column">
        <h1><%= @frontmatter.title %></h1>
        <p class="tagline"><%= @frontmatter.description %></p>
        <p class="postscript">
          Read more
          <span class="down-caret">‚ñº</span>
        </p>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col col-lg-2"></div>
      <main class="col-md-8 ac-blog-content" role="main">
        <%= @content %>

        <footer>
          Thanks for reading üôè Please share the ‚ù§Ô∏è
          <a href="https://news.ycombinator.com/submitlink?u=https://adamconrad.me/<%= @filename %>&t=<%= @frontmatter.title %>"
            aria-label="Share on HackerNews"
            rel="noopener"
            target="_blank">
            Post to HN
          </a> /
          <a href='https://github.com/acconrad/blog/posts/<%= @filename |> String.replace(".html", ".markdown") %>'
            aria-label="Comment via source"
            rel="noopener"
            target="_blank">
            Comment (via source)
          </a>
        </footer>
      </main>
      <div class="col col-lg-2"></div>
    </div>
  </div>
</article>
